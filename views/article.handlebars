<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">The Mongo Tech Times</h1>
        <a class="btn btn-danger btn-lg" id="home" role="button">Home</a>>
    </div>
</div>

<div class="container-fluid articles">
    <div class="article-list">
        <h3>{{result.title}}</h3>
        <p>{{result.summary}}</p>
        <a href="{{result.link}}" target="_blank"> View Article </a>
    </div>
    <div class="note-section container-fluid">
        <ul>
            {{#each result.note}}
            <li>{{this.summary}} <button type="button" class="btn-delete btn btn-secondary" data-id="{{this._id}}">Delete
                    Note</button></li>
            <br>
            {{/each}}
        </ul>
    </div>
    <div class="container-fluid form-add">
        <form>
            <div class="form-group">
                <label for="addNote">Add a Note</label>
                <textarea class="form-control" id="addNote" rows="3"></textarea>
            </div>
            <button type="submit" id="addingNote" data-id="{{result._id}}" class="btn btn-primary">Submit</button>
        </form>
    </div>


</div>
<footer class="footer">
    <div class="container">
        <p>2019 | Mongo Scraper Times by Caroline Sekercan</p>
    </div>
</footer>

